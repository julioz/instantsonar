<manifest package="com.sample.instantsonar.base"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:instant="http://schemas.android.com/instantapps">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:name="com.sample.instantsonar.SampleApplication">
        <activity
            android:name="com.sample.instantsonar.artists.ArtistsActivity"
            split="${artistsAtomName}"
            android:theme="@style/AppTheme">
            <intent-filter xmlns:instant="http://schemas.android.com/instantapps"
                instant:order="1">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="instantsonar.com"
                    android:pathPrefix="/artist"
                    android:scheme="http" />
                <data
                    android:host="instantsonar.com"
                    android:pathPrefix="/artist"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.sample.instantsonar.tracks.TrackActivity"
            split="${tracksAtomName}"
            android:theme="@style/AppTheme">
            <intent-filter xmlns:instant="http://schemas.android.com/instantapps"
                instant:order="1">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="instantsonar.com"
                    android:pathPrefix="/track"
                    android:scheme="http" />
                <data
                    android:host="instantsonar.com"
                    android:pathPrefix="/track"
                    android:scheme="https" />
            </intent-filter>
        </activity>
    </application>

</manifest>
